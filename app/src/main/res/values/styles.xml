<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Splash theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- FAB & FAM themes -->

    <style name="MenuLabelsStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FabStyle">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/colorAccent</item>
        <item name="fab_colorPressed">@color/colorAccent400</item>
        <item name="fab_colorRipple">@color/colorFabRipple</item>
    </style>

    <!-- Dialog row style -->
    <style name="DialogTitle">
        <item name="android:height">@dimen/dialog_row_height</item>
        <item name="android:textSize">@dimen/dialog_row_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/dialog_row_padding</item>
    </style>
    <style name="DialogRow">
        <item name="android:height">@dimen/dialog_row_height</item>
        <item name="android:textSize">@dimen/dialog_row_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/dialog_row_padding</item>
    </style>

</resources>
